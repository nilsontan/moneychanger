<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />

  <g:DecoratorPanel>
    <g:FlowPanel>
      <g:Label text="Category Info" addStyleNames="{res.admin.formTitle}" />
      <g:FormPanel title="test">
        <g:Grid ui:field="catGrid">
          <g:row>
            <g:customCell>
              <g:Label text="Name" addStyleNames="{res.admin.formParam}" />
            </g:customCell>
            <g:customCell>
              <g:TextBox ui:field="categoryName" />
            </g:customCell>
          </g:row>
          <g:row>
            <g:customCell>
              <g:Label text="Parent" addStyleNames="{res.admin.formParam}" />
            </g:customCell>
            <g:customCell>
              <g:FlowPanel>
                <g:ListBox ui:field="categoryParent" />
              </g:FlowPanel>
            </g:customCell>
          </g:row>
        </g:Grid>
      </g:FormPanel>
      <g:HorizontalPanel spacing="2">
        <g:Button text="Update Category" />
        <g:Button text="Create Category" />
      </g:HorizontalPanel>
    </g:FlowPanel>
  </g:DecoratorPanel>

</ui:UiBinder>