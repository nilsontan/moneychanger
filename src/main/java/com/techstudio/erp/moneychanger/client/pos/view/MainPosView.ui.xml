<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />
  <ui:style>
    .centerOfScreen {
      position: absolute;
      top: 45%;
      left: 45%;
    }
  </ui:style>

  <g:HTMLPanel>
    <g:DecoratorPanel ui:field="loadingMessage" addStyleNames="{res.pos.centered}, {style.centerOfScreen}">
      <g:Image resource="{res.iLoadingIcon}" />
    </g:DecoratorPanel>
    <g:HTMLPanel ui:field="mainContentContainer" />
  </g:HTMLPanel>
</ui:UiBinder>