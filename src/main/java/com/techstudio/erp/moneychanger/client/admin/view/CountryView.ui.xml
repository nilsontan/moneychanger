<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    >

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />

  <g:FlowPanel>
    <g:Label text="Country List" addStyleNames="{res.admin.pageTitle}" />
    <g:Label text="Create or Update countries quickly" addStyleNames="{res.admin.pageDescription}" />
    <g:HorizontalPanel spacing="10">
      <g:FlowPanel>
        <c:CellTable ui:field="countryTable" />
        <c:SimplePager ui:field="countryPager" location="CENTER" />
      </g:FlowPanel>
      <g:VerticalPanel>
        <g:DecoratorPanel>
          <g:FlowPanel>
            <g:Label text="Country Info" addStyleNames="{res.admin.formTitle}" />
            <g:Grid>
              <g:row>
                <g:customCell>
                  <g:Label text="Code" addStyleNames="{res.admin.formParam}" />
                </g:customCell>
                <g:customCell>
                  <g:TextBox ui:field="countryCode" />
                </g:customCell>
              </g:row>
              <g:row>
                <g:customCell>
                  <g:Label text="Name" addStyleNames="{res.admin.formParam}" />
                </g:customCell>
                <g:customCell>
                  <g:TextBox ui:field="countryName" />
                </g:customCell>
              </g:row>
              <g:row>
                <g:customCell>
                  <g:Label text="Full Name" addStyleNames="{res.admin.formParam}" />
                </g:customCell>
                <g:customCell>
                  <g:TextBox ui:field="countryFullName" />
                </g:customCell>
              </g:row>
            </g:Grid>
            <g:HorizontalPanel spacing="2">
              <g:Button ui:field="countryUpdate" text="Update Country" />
              <g:Button ui:field="countryCreate" text="Create Country" />
            </g:HorizontalPanel>
          </g:FlowPanel>
        </g:DecoratorPanel>
      </g:VerticalPanel>
    </g:HorizontalPanel>
  </g:FlowPanel>

</ui:UiBinder>