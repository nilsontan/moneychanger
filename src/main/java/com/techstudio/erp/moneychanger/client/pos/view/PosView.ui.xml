<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:m="urn:import:com.techstudio.erp.moneychanger.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />
  <ui:style>
    .stepPosition {
      padding-top: 0.7em;
    }

    .noBg {
      background: none;
    }

    .centered {
      margin: 0 auto;
    }

    .txButtons {
      width: 7.5em;
      margin: 0 auto;
      padding: 2px;
      -webkit-border-radius: 8px;
      -moz-border-radius: 8px;
      border-radius: 8px;
    }

    .starContainer {
      position: relative;
    }
  </ui:style>

  <g:HTMLPanel>
    <div style="border-width:1px 0; height:3em;" class="bar">
      <g:Label ui:field="currentStep" addStyleNames="{res.pos.step}, {style.stepPosition}" />
    </div>
    <div class="content bodyBg">
      <g:FlowPanel ui:field="spotRateDisplay" width="100%">
        <g:VerticalPanel width="100%" spacing="20">
          <c:CellTable ui:field="spotRateTable" addStyleNames="{style.centered}" />
          <c:SimplePager ui:field="spotRatePager" location="CENTER" addStyleNames="{style.centered}" />
        </g:VerticalPanel>
      </g:FlowPanel>
      <g:HTMLPanel ui:field="mainPanel" width="100%">
        <g:HTMLPanel ui:field="itemPanel" addStyleNames="itemListing">
          <m:OrderedList ui:field="itemMenu" width="100%" />
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="qtyPanel" addStyleNames="{style.centered}">
          <g:VerticalPanel>
            <g:HorizontalPanel width="100%" spacing="5">
              <g:Image ui:field="qtpItemImage" />
              <g:Grid>
                <g:row>
                  <g:customCell>
                    <g:Label ui:field="qtpItemCode" />
                  </g:customCell>
                  <g:customCell>
                    <g:Label ui:field="qtpItemName" />
                  </g:customCell>
                </g:row>
                <g:row>
                  <g:customCell>
                    <g:Label ui:field="qtpItemUom" />
                  </g:customCell>
                  <g:customCell>
                    <g:Label ui:field="qtpItemUomRate" />
                  </g:customCell>
                </g:row>
              </g:Grid>
            </g:HorizontalPanel>
            <m:LabelNumberBox ui:field="qtpItemUnitPrice" text="Rate" />
            <m:LabelNumberBox ui:field="qtpItemQuantity" text="Amount" />
            <g:HTMLPanel addStyleNames="{style.starContainer}">
              <span style="position:absolute; top:28%; left:6%;" class="icon-set icon-star"> </span>
              <g:Button ui:field="qtpOK" text="Confirm" />
            </g:HTMLPanel>
          </g:VerticalPanel>
        </g:HTMLPanel>
        <g:HTMLPanel ui:field="transactionPanel" addStyleNames="{style.centered}">
          <g:DecoratorPanel>
            <c:CellTable ui:field="lineItemTable" />
          </g:DecoratorPanel>
          <g:HorizontalPanel spacing="10" width="100%" addStyleNames="{style.noBg}">
            <m:MyButton ui:field="txAdd" text="Add" resource="{res.iTxAdd}" addStyleNames="{style.txButtons}" />
            <m:MyButton ui:field="txSav" text="OK" resource="{res.iTxSav}" addStyleNames="{style.txButtons}" />
            <m:MyButton ui:field="txDel" text="Cancel" resource="{res.iTxDel}" addStyleNames="{style.txButtons}" />
          </g:HorizontalPanel>
        </g:HTMLPanel>
      </g:HTMLPanel>
    </div>
  </g:HTMLPanel>
</ui:UiBinder>