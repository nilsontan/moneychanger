<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:m="urn:import:com.techstudio.erp.moneychanger.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />
  <ui:style>
    .whiteBg {
      background-color: white;
    }

    .centered {
      margin: 0 auto;
    }

    .loweredButton {
      height: 100%;
      position: relative;
      top: 5px;
    }
  </ui:style>

  <g:FlowPanel width="480px" addStyleNames="{style.centered}, {style.whiteBg}">
    <g:VerticalPanel width="100%">
      <g:HorizontalPanel spacing="10" addStyleNames="{res.pos.northBar}" width="100%">
        <m:PosLogo ui:field="logo" />
        <g:Image ui:field="txNew" resource="{res.iTxNew}" />
        <g:Image ui:field="txAdd" resource="{res.iTxAdd}" />
        <g:Image ui:field="txDel" resource="{res.iTxDel}" />
        <g:Image ui:field="txSav" resource="{res.iTxSav}" />
      </g:HorizontalPanel>
      <g:FlowPanel ui:field="spotRateDisplay">
        <c:CellTable ui:field="spotRateTable" addStyleNames="{style.centered}" />
        <c:SimplePager ui:field="spotRatePager" location="CENTER" addStyleNames="{style.centered}" />
      </g:FlowPanel>
      <g:VerticalPanel ui:field="mainPanel" spacing="10" width="100%">
        <g:Label ui:field="currentStep" addStyleNames="{res.admin.formTitle}" />
        <g:FlowPanel width="100%">
          <g:Grid ui:field="itemPanel" addStyleNames="{style.centered}">
            <g:row>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnAud"
                                  text="AUD" resource="{res.iCurAud}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnGbp"
                                  text="GBP" resource="{res.iCurGbp}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnMyr"
                                  text="MYR" resource="{res.iCurMyr}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnSgd"
                                  text="SGD" resource="{res.iCurSgd}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnUsd"
                                  text="USD" resource="{res.iCurUsd}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnEur"
                                  text="EUR" resource="{res.iCurEur}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnInr"
                                  text="INR" resource="{res.iCurInr}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnIdr"
                                  text="IDR" resource="{res.iCurIdr}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnJpy"
                                  text="JPY" resource="{res.iCurJpy}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
              <g:customCell>
                <m:ItemMenuButton ui:field="btnThb"
                                  text="THB" resource="{res.iCurThb}" addStyleNames="{res.pos.curBtn}" />
              </g:customCell>
            </g:row>
          </g:Grid>
          <g:DecoratorPanel ui:field="qtyPanel" addStyleNames="{style.centered}">
            <g:VerticalPanel>
              <g:HorizontalPanel width="100%" spacing="5" addStyleNames="{res.pos.btmBorder}">
                <g:Image resource="{res.iCurSgd}" />
                <g:Grid>
                  <g:row>
                    <g:customCell>
                      <g:Label ui:field="qtpItemCode" />
                    </g:customCell>
                    <g:customCell>
                      <g:Label ui:field="qtpItemName" />
                    </g:customCell>
                  </g:row>
                  <g:row>
                    <g:customCell>
                      <g:Label ui:field="qtpItemUom" />
                    </g:customCell>
                    <g:customCell>
                      <g:Label ui:field="qtpItemUomRate" />
                    </g:customCell>
                  </g:row>
                </g:Grid>
              </g:HorizontalPanel>
              <g:HorizontalPanel spacing="5">
                <g:Grid>
                  <g:row>
                    <g:customCell>
                      <g:Label text="Rate" addStyleNames="{res.pos.formParam}" />
                    </g:customCell>
                    <g:customCell>
                      <m:NumberBox ui:field="qtpItemUnitPrice" />
                    </g:customCell>
                  </g:row>
                  <g:row>
                    <g:customCell>
                      <g:Label ui:field="qtpTxType" addStyleNames="{res.pos.formParam}" />
                    </g:customCell>
                    <g:customCell>
                      <m:NumberBox ui:field="qtpItemQuantity" />
                    </g:customCell>
                  </g:row>
                </g:Grid>
                <g:Button ui:field="qtpOK" text="Confirm" addStyleNames="{style.loweredButton}" />
              </g:HorizontalPanel>
            </g:VerticalPanel>
          </g:DecoratorPanel>
          <g:DecoratorPanel ui:field="transactionPanel" addStyleNames="{style.centered}">
            <c:CellTable ui:field="lineItemTable" />
          </g:DecoratorPanel>
        </g:FlowPanel>
      </g:VerticalPanel>
    </g:VerticalPanel>
  </g:FlowPanel>
</ui:UiBinder> 