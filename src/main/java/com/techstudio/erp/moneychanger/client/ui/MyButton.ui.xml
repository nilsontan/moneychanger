<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">
  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />
  <ui:style>
    .btnStyle {
      margin: 0 auto;
    }

    .btnText {
      vertical-align: middle;
      text-align: left;
    }
  </ui:style>

  <g:SimplePanel ui:field="pane" styleName="{res.pos.button}">
    <g:Grid width="100%" styleName="{style.btnStyle}">
      <g:row>
        <g:customCell>
          <g:Image ui:field="image" />
        </g:customCell>
        <g:customCell>
          <g:Label ui:field="label" addStyleNames="{style.btnText}" />
        </g:customCell>
      </g:row>
    </g:Grid>
  </g:SimplePanel>
</ui:UiBinder> 