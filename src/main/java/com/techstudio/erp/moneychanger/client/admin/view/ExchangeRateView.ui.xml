<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
             xmlns:m="urn:import:com.techstudio.erp.moneychanger.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />

  <g:FlowPanel>
    <g:Label text="Exchange Rates" addStyleNames="{res.admin.pageTitle}" />
    <g:Label text="Create or Update exchange rates quickly" addStyleNames="{res.admin.pageDescription}" />
    <g:HorizontalPanel spacing="10">
      <g:FlowPanel>
        <c:CellTable ui:field="xrTable" />
        <c:SimplePager ui:field="xrPager" location="CENTER" />
      </g:FlowPanel>
      <g:DecoratorPanel>
        <g:FlowPanel>
          <g:Label text="Rate Info" addStyleNames="{res.admin.formTitle}" />
          <g:Grid ui:field="xrGrid">
            <g:row>
              <g:customCell>
                <g:Label text="Code" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="xrCode" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Name" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="xrName" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Currency" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:FlowPanel>
                  <m:SelectOneListBox ui:field="xrCurrencyList" />
                </g:FlowPanel>
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Unit" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="xrUnit" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Ask" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="xrAsk" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Bid" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="xrBid" />
              </g:customCell>
            </g:row>
          </g:Grid>
          <g:HorizontalPanel spacing="2">
            <g:Button ui:field="xrUpdate" text="Update Exch. Rate" />
            <g:Button ui:field="xrCreate" text="Create Exch. Rate" />
          </g:HorizontalPanel>
        </g:FlowPanel>
      </g:DecoratorPanel>
    </g:HorizontalPanel>
  </g:FlowPanel>

</ui:UiBinder>