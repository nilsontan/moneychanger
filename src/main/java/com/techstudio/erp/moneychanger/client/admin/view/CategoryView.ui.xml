<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client"
    >

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />

  <g:FlowPanel>
    <g:Label text="Category List" addStyleNames="{res.admin.pageTitle}" />
    <g:Label text="Create or Update categories quickly" addStyleNames="{res.admin.pageDescription}" />
    <g:HorizontalPanel spacing="10">
      <g:FlowPanel>
        <c:CellTable ui:field="categoryTable" />
        <c:SimplePager ui:field="categoryPager" location="CENTER" />
      </g:FlowPanel>
      <g:DecoratorPanel>
        <g:FlowPanel>
          <g:Label text="Category Info" addStyleNames="{res.admin.formTitle}" />
          <g:Grid ui:field="catGrid">
            <g:row>
              <g:customCell>
                <g:Label text="Code" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="categoryCode" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Name" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="categoryName" />
              </g:customCell>
            </g:row>
            <!--<g:row>
              <g:customCell>
                <g:Label text="Parent" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:FlowPanel>
                  <m:SelectOneListBox ui:field="categoryParentList" />
                </g:FlowPanel>
              </g:customCell>
            </g:row>-->
          </g:Grid>
          <g:HorizontalPanel spacing="2">
            <g:Button ui:field="categoryUpdate" text="Update Category" />
            <g:Button ui:field="categoryCreate" text="Create Category" />
          </g:HorizontalPanel>
        </g:FlowPanel>
      </g:DecoratorPanel>
    </g:HorizontalPanel>
  </g:FlowPanel>

</ui:UiBinder>