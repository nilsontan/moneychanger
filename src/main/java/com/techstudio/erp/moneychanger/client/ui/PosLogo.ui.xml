<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />
  <ui:style>
    .logo {
      padding-bottom: 4px;
    }

    .loweredLabel {
      padding-top: 5px;
    }
  </ui:style>

  <g:SimplePanel width="170px" height="37px" addStyleNames="{style.logo}">
    <g:HorizontalPanel spacing="5">
      <g:Image resource="{res.iLogoPos}" />
      <g:HTMLPanel>
        <g:Label text="Moneychanger" addStyleNames="{res.pos.formTitle}, {style.loweredLabel}" />
      </g:HTMLPanel>
    </g:HorizontalPanel>
  </g:SimplePanel>
</ui:UiBinder> 