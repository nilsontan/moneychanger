<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:c="urn:import:com.google.gwt.user.cellview.client">

  <ui:with field="res" type="com.techstudio.erp.moneychanger.client.resources.Resources" />

  <g:FlowPanel>
    <g:Label text="Spot Rates" addStyleNames="{res.admin.pageTitle}" />
    <g:Label text="Create or Update spot rates quickly" addStyleNames="{res.admin.pageDescription}" />
    <g:HorizontalPanel spacing="10">
      <g:FlowPanel>
        <c:CellTable ui:field="spotRateTable" />
        <c:SimplePager ui:field="spotRatePager" location="CENTER" />
      </g:FlowPanel>
      <g:DecoratorPanel>
        <g:FlowPanel>
          <g:Label text="Spot Rate Info" addStyleNames="{res.admin.formTitle}" />
          <g:Grid ui:field="spotRateGrid">
            <g:row>
              <g:customCell>
                <g:Label text="Code" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="spotRateCode" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Name" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="spotRateName" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Bid" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="spotRateBid" />
              </g:customCell>
            </g:row>
            <g:row>
              <g:customCell>
                <g:Label text="Ask" addStyleNames="{res.admin.formParam}" />
              </g:customCell>
              <g:customCell>
                <g:TextBox ui:field="spotRateAsk" />
              </g:customCell>
            </g:row>
          </g:Grid>
          <g:HorizontalPanel spacing="2">
            <g:Button ui:field="spotRateUpdate" text="Update Spot Rate" />
            <g:Button ui:field="spotRateCreate" text="Create Spot Rate" />
          </g:HorizontalPanel>
        </g:FlowPanel>
      </g:DecoratorPanel>
    </g:HorizontalPanel>
  </g:FlowPanel>

</ui:UiBinder>